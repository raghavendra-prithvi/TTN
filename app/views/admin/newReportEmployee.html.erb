<h2>
  <div id="title">
	<%=@titleUsers%> Users Report for <%=@month%> - <%=@year%>
  </div>
</h2>
<br/>
<div>
  <div>
  <span class="pull-left"><h4>    
    <%=link_to "Print", "#", :onclick => "printPage()",:class=> "btn btn-success" %>
    <%=link_to "Download CSV", "/ts_manager_csvReport?format=csv&modified=true&type="+params[:type], :class=> "btn btn-info" , :onclick => "addURLNoCSV(this)"%>
  
    </div>
  <div style="clear:both"></div>
<table class="table table-striped table-bordered" style="width:80%" id="resultTbl">  
  <thead>
    <tr>
      <th>
        CLID
      </th>     
      <th>
        Account Number
      </th>
      <th>
        Hours
      </th>      
      <th>
        Name
      </th>
    </tr>
  </thead>
  <tbody>
<% @userRows.each do |u, monthHours| %>
	<%if u.blank? %>
		<tr> yo</tr>
	
	<%else%>
	<%monthHours.each do |acct_number, hours| %>
      <tr>
        <td>
          <%= u.email.split("@")[0] %>
        </td>     
        <td>
			<%=acct_number%>
        </td>   
        <td>        
        	<span>
        	<%=hours[1]%>
        	</span>
          <div style="width:100%;">
              <%=text_field_tag "hours",hours[1], :style => "width:80px;display:none", :class => "inlineEdit" %>            
            </div>
        </td>
      
      
        <td>
          <%=u.name %>
        </td>
     

      </tr>    
      <%end%>
    <% end %>
 <%end%> 
 </tbody>
</table>

<br/>
