<div class="row">
<div class='col-xs-12'>
<table class="table table-striped table-bordered table-condensed pull-left" style="width:40%">
  <% if @aps.length > 0 %>
  <thead>
    <tr>
      <th>Name</th>      
      <th>Acct Number</th> 
      <th></th>
    </tr>
  </thead>  
  <tbody>    
    <% @aps.each do |project| %>
      <tr>
        <td><%= project.name %></td>        
        <td><%= project.acct_number %></td>                
        <td>
          <%=hidden_field_tag "projectId",project.id,:class => "projectCls" %>
          <a href="#" onclick="loadDetails($(this).parent().find('input.projectCls').val())" ><img src="/assets/more_details.ico" style="width:26px;height:26px;" /></a></td>
      </tr>
    <% end %>
  </tbody>
  <% end %>
</table>


<div id="subdetails" class="pull-left" style="margin-left:100px;width:40%;">
  
</div>
</div>
<div class="col-xs-12">
<%= link_to 'Back', '/admin/projects/', :class => "btn btn-active"%>
</div>
</div>
<script>
  function loadDetails(projectId){

    $.ajax({
                method: 'GET',
                url: '/archivedProjectdetails',
                data : "projectId="+ projectId,
                success: function(dt){
                  $("#subdetails").html(dt);
                }
            });
    
  }
  
</script>