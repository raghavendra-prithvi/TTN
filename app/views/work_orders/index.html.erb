$(document).ready( function() {
    $(".work-order-home-client").addClass("active");  
  	$('.pull-down').each(function() {
    	$(this).css('margin-top', $(this).parent().height()-($(this).height() + 20));

	});
	overrideAlertBanner('', '');
});

</script>

<%end%>